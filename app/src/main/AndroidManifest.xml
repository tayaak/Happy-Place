<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Zugriff auf Internet für Karten-Daten -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Zugriff auf Netzwerkstatus -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Zugriff auf GPS Standort (fein) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Zugriff auf groben Standort (Netzwerk) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Zugriff auf externe Speicherung, falls du Bilder aus der Galerie auswählst -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Zugriff auf Kamera -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />


    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HappyPlaceApp"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HappyPlaceApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
